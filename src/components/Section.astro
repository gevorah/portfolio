---
interface Props {
  id?: string
  title: string
}

const { id, title } = Astro.props
---

<section id={id} data-section={id} class="flex flex-col items-center justify-center w-full px-6 md:px-16 mt-9">
  <div class="flex flex-col w-full max-w-5xl gap-6">
    <h2 class="text-xl sm:text-3xl font-bold">{title}</h2>
    <slot />
  </div>
</section>