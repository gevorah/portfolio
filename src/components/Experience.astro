---
import aspis from '@/assets/aspis.png';
import encora from '@/assets/encora.png';
import icesi from '@/assets/icesi.png';
import { Image } from 'astro:assets';
---

<section class="my-9 px-4">
  <h2 class="text-3xl font-bold">Experience</h2>
  <div class="mt-3 max-w-xl">
    <article
      class="flex flex-row items-center justify-between gap-9 border-t border-foreground py-3 first:border-0"
    >
      <div class="flex flex-row items-center gap-4">
        <div class="rounded-md bg-secondary p-3">
          <Image
            src={aspis}
            alt="Aspis Consulting"
            class="size-6 rounded-full"
          />
        </div>
        <div>
          <h3 class="text-xl font-medium">
            Fullstack Developer at <span class="font-bold text-primary"
              >Aspis Consulting</span
            >
          </h3>
          <p class="text-sm">February 2024 - June 2024</p>
        </div>
      </div>
      <div>Details</div>
    </article>
    <article
      class="flex flex-row items-center justify-between gap-9 border-t border-foreground py-3 first:border-0"
    >
      <div class="flex flex-row items-center gap-4">
        <div class="rounded-md bg-secondary p-3">
          <Image src={encora} alt="Encora" class="size-6 rounded-full" />
        </div>
        <div>
          <h3 class="text-xl font-medium">
            Software Engineer I (Intern) at <span class="font-bold text-primary"
              >Encora</span
            >
          </h3>
          <p class="text-sm">July 2023 - January 2024</p>
        </div>
      </div>
      <div>Details</div>
    </article>
    <article
      class="flex flex-row items-center justify-between gap-9 border-t border-foreground py-3 first:border-0"
    >
      <div class="flex flex-row items-center gap-4">
        <div class="rounded-md bg-secondary p-3">
          <Image src={icesi} alt="Icesi" class="size-6 rounded-full" />
        </div>
        <div>
          <h3 class="text-xl font-medium">
            Software Developer at <span class="font-bold text-primary"
              >Icesi</span
            >
          </h3>
          <p class="text-sm">April 2022 - June 2023</p>
        </div>
      </div>
      <div>Details</div>
    </article>
  </div>
</section>
